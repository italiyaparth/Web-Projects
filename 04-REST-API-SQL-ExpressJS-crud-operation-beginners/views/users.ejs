<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <style>
        table, th, td {
            border: 1px solid black;
        }
    </style>
</head>
<body>

    <form method="GET" action="/user/new">
      <button>Add New User</button>
    </form>

    <h2>List of all users</h2>    
    <table>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Username</th>
        </tr>

        <% for (const user of users) { %>
            
            <tr>
                <td><%= user.id %></td>
                <td><%= user.email %></td>
                <td><%= user.username %></td>
                <td>
                    <form action="/user/<%= user.id %>/edit" method="get">
                        <button>Edit Username</button>
                    </form>
                </td>
                <td>
                    <form action="/user/<%= user.id %>/delete" method="get">
                        <button>Delete This Record</button>
                    </form>
                </td>
            </tr>

        <% } %>

    </table>

</body>
</html>